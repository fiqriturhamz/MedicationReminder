<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedicationReminder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/sub_green</item>
        <item name="colorPrimaryDark">@color/sub_green</item>
        <item name="colorAccent">@color/sub_green</item>
        <item name="clockNumberTextColor">@color/sub_green</item>
        <item name="dialogTheme">@style/Theme.Dialog</item>
        <item name="alertDialogTheme">@style/Theme.Dialog</item>
        <item name="materialAlertDialogTheme">@style/Theme.Dialog</item>
        <item name="materialTimePickerTheme">@style/Theme.TimePicker</item>
        <item name="materialCalendarTheme">@style/Theme.Calendar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/sub_green</item>
        <item name="colorAccent">@color/sub_green</item>
    </style>

    <style name="Theme.TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/sub_green</item>
        <item name="colorAccent">@color/sub_green</item>
    </style>

    <style name="Theme.Calendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/sub_green</item>
        <item name="colorAccent">@color/sub_green</item>
    </style>

    <style name="Theme.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/sub_green</item>
    </style>

    <style name="Theme.TextInput.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorControlActivated">@color/sub_green</item>
    </style>
</resources>